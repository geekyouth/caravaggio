{
  "name": "caravaggio",
  "version": "2.2.2",
  "description": "A blazing fast image processor service",
  "main": "index.js",
  "bin": "bin/caravaggio",
  "scripts": {
    "start": "NODE_ENV=production node .",
    "now-start": "bin/caravaggio --cache memory",
    "dev": "NODE_ENV=development micro-dev -p 3001 src/ -s | pino",
    "test": "npm run lint && npm run test-only -- --coverage --colors=false",
    "test-only": "NODE_ENV=test ALLOW_CONFIG_MUTATIONS=true jest",
    "test-watch": "npm run test-only -- --watch",
    "lint": "eslint ."
  },
  "now": {
    "public": true,
    "type": "npm"
  },
  "repository": "gitlab:ramiel/caravaggio",
  "keywords": [
    "image",
    "proxy",
    "manipulation",
    "processor",
    "service"
  ],
  "author": "Fabrizio Ruggeri",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/ramiel/caravaggio/issues"
  },
  "homepage": "https://ramiel.gitlab.io/caravaggio/",
  "dependencies": {
    "config": "^1.30.0",
    "fs-extra": "^6.0.0",
    "md5": "^2.2.1",
    "micro": "^9.3.0",
    "micro-redirect": "^1.0.0",
    "microrouter": "^3.1.2",
    "node-fetch": "^2.1.2",
    "pino": "^4.16.1",
    "sharp": "^0.20.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-jest": "^2.1.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "jest": "23.0.1",
    "micro-dev": "3.0.0",
    "request-promise": "^4.2.2",
    "test-listen": "^1.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/config/",
      "<rootDir>/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ]
  },
  "pkg": {
    "assets": "config/**/*"
  }
}
